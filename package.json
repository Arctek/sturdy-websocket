{
    "name": "sturdy-websocket",
    "version": "0.1.9",
    "description":
        "Tiny WebSocket wrapper that reconnects and resends failed messages.",
    "main": "dist/index.js",
    "types": "dist/index",
    "files": ["dist/"],
    "repository": {
        "type": "git",
        "url": "git://github.com/dphilipson/sturdy-websocket.git"
    },
    "homepage": "https://github.com/dphilipson/sturdy-websocket",
    "bugs": {
        "url": "https://github.com/dphilipson/sturdy-websocket/issues",
        "email": "david.philipson@gmail.com"
    },
    "author": "David Philipson <david.philipson@gmail.com> (http://dphil.me)",
    "license": "MIT",
    "scripts": {
        "build": "yarn run clean && tsc -p tsconfig.build.json",
        "clean": "rm -rf dist/*",
        "format": "prettier --write",
        "generate-toc": "markdown-toc -i",
        "jest": "jest",
        "jest-watch": "yarn run jest -- --watch",
        "lint": "tslint --project .",
        "precommit": "lint-staged",
        "prepare": "yarn run build",
        "test": "npm-run-all lint typecheck jest",
        "typecheck": "tsc"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": ["ts", "tsx", "js"],
        "mapCoverage": true
    },
    "lint-staged": {
        "*.{js,json}": ["format", "git add"],
        "*.{ts,tsx}": ["yarn run lint -- --fix", "format", "git add"],
        "*.md": ["generate-toc", "git add"]
    },
    "devDependencies": {
        "@types/jest": "^22.1.2",
        "@types/lodash.defaults": "^4.2.3",
        "@types/ws": "^6.0.0",
        "husky": "^0.14.3",
        "jest": "^22.3.0",
        "lint-staged": "^6.1.0",
        "markdown-toc": "^1.2.0",
        "npm-run-all": "^4.1.2",
        "prettier": "^1.10.2",
        "ts-jest": "^22.0.4",
        "tslint": "^5.9.1",
        "tslint-config-prettier": "^1.7.0",
        "typescript": "^2.8.1",
        "websocket": "^1.0.26",
        "ws": "^6.0.0"
    },
    "dependencies": {
        "lodash.defaults": "^4.2.0"
    }
}
